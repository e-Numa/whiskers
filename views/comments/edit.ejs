<%- include ("../partials/header") %>
<title>edit</title>
<div class="container">
    <h1 class="text-center">Edit Comment</h1>

    <div style="width: 40%; margin: 30px auto;">
        <form action="/pets/<%=pet_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comments[text]" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit">
            </div>
        </form>
        <a href="/pets/<%=pet_id%>">Go Back</a>
    </div>

</div>

