<%- include ("../partials/header") %>
<title>new</title>
<div class="container">
    <h1 class="text-center">Add a Comment to <%=pet.petName%></h1>

    <div style="width: 40%; margin: 30px auto;">
        <form action="/pets/<%=pet._id%>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comments[text]" placeholder="Comment text">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit">
            </div>
        </form>
        <a href="/pets/<%=pet._id%>">Go Back</a>
    </div>

</div>

<%- include ("../partials/footer") %>
