<%- include ("../partials/header") %>

<div class="container">
    <h1 class="text-center">Edit <%= pet.name %></h1>

    <div style="width: 40%; margin: 30px auto;">
        <form action="/pets/<%= pet._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="pet[name]" value="<%= pet.name %>" placeholder="Pet Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="pet[price]" value="<%= pet.price %>" min="100" step="0.5" placeholder="Pet Price">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="pet[imageUrl]" value="<%= pet.imageUrl %>" placeholder="Image URL">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="pet[description]" value="<%= pet.description %>" placeholder="Pet Description">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit">
            </div>
        </form>
        <a href="/pets">Go Back</a>
    </div>
</div>

<%- include ("../partials/footer") %>
